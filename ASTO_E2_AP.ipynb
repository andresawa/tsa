    "### ------------------------------------------------------------------------------------\n",
    "### Define the function to segment the data\n",
    "### ------------------------------------------------------------------------------------\n",
    "def make_segments(series, number_segments):\n",
    "    segmentation = np.array_split(series, number_segments)\n",
    "    mean = pd.Series([array.mean() for array in segmentation])\n",
    "    return mean"
